<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.weiting.ui_02.MainActivity"
    android:background="@drawable/gradient_1">

   <include
       android:id="@+id/include"
       layout="@layout/app_bar_main"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" />

   <TextView
       android:id="@+id/textView8"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="   I can do \neverything "
       android:textStyle="bold"
       android:textColor="#ffffff"
       android:textSize="50dp"
       app:layout_constraintTop_toTopOf="@+id/include"
       app:layout_constraintLeft_toLeftOf="@+id/include"
       android:layout_marginTop="175dp"
       android:layout_marginLeft="55dp"
       android:layout_marginStart="55dp" />

   <ImageView
       android:id="@+id/imageView4"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:srcCompat="@drawable/logoc"
       android:layout_marginTop="30dp"
       app:layout_constraintLeft_toLeftOf="@+id/textView8"
       app:layout_constraintTop_toBottomOf="@+id/textView8"
       android:layout_marginLeft="80dp"
       android:layout_marginStart="80dp" />
   <include layout="@layout/mode_bar"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
       tools:layout_editor_absoluteY="0dp"
       tools:layout_editor_absoluteX="-79dp" />
</android.support.constraint.ConstraintLayout>
